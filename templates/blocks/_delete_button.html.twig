<form method="post" class="js-delete d-inline-block" action="{{ path(route, {'id': id}) }}" onsubmit="return confirm('Ești sigur că vrei să ștergi {{ item }}?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-sm btn-outline-danger"><i class="far fa-trash-alt"></i></button>
</form>
