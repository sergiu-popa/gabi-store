<div class="card mb-5">
    <div class="card-header">Marfă achitată</div>

    <table class="table table-striped" style="border-top: none;">
        <thead>
        <tr>
            <th>Furnizor</th>
            <th>Plată</th>
            <th>Cantitate</th>
            {% if canModify %}<th></th>{% endif %}
        </tr>
        </thead>
        <tbody>
        {% for p in payments %}
            {{ include('merchandise_payment/_payment.html.twig') }}
        {% else %}
            <tr><td colspan="4">Nu s-a achitat nici o marfă.</td></tr>
        {% endfor %}
        </tbody>
    </table>

    {% if canModify %}
        <div class="card-footer text-right">
            <a class="js-add btn btn-sm btn-outline-primary"
               href="{{ path('merchandise_payment_new', { 'date': currentDate|date('Y-m-d') }) }}">adaugă</a>
        </div>
    {% endif %}
</div>
