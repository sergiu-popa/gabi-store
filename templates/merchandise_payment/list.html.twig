<div class="js-unverified card mb-3">
    <div class="card-header">Marfă achitată</div>

    <table class="js-main table table-striped" style="border-top: none;">
        <thead>
        <tr>
            <th>Furnizor</th>
            <th>Plată</th>
            <th>Suma</th>
            {% if canModify %}<th class="d-none d-md-table-cell"></th>{% endif %}
        </tr>
        </thead>
        <tbody>
        {% for p in payments %}
            {{ include('merchandise_payment/_payment.html.twig') }}
        {% else %}
            <tr class="js-empty"><td colspan="4">Nu s-a achitat nici o marfă.</td></tr>
        {% endfor %}

        {% if payments|length > 1 %}
            <tr class="total">
                <td colspan="2" class="text-right"><strong>Total</strong></td>
                <td colspan="2">{{ payments|total }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <div class="card-footer text-right">
        {% if showReview %}
            <button class="js-review btn btn-sm btn-success">
                <i class="fas fa-check"></i> verificat</button>
        {% endif %}

        {% if canModify %}
            <a class="js-add btn btn-sm btn-outline-primary"
               href="{{ path('merchandise_payment_new', { 'date': currentDate|date('Y-m-d') }) }}">adaugă</a>
        {% endif %}
    </div>
</div>
