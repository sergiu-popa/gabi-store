{% extends 'base.html.twig' %}

{% block title %}Merchandise index{% endblock %}

{% block body %}
    <h1>Merchandise index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Furnizor</th>
                <th>Categorie</th>
                <th>Nume</th>
                <th>Cantitate</th>
                <th>Pret intrare</th>
                <th>Pret iesire</th>
                <th>Data</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for merchandise in merchandises %}
            <tr>
                <td>{{ merchandise.provider }}</td>
                <td>{{ merchandise.category }}</td>
                <td>{{ merchandise.name }}</td>
                <td>{{ merchandise.amount }}</td>
                <td>{{ merchandise.enterPrice }}</td>
                <td>{{ merchandise.exitPrice }}</td>
                <td>{{ merchandise.date ? merchandise.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('merchandise_show', {'id': merchandise.id}) }}">show</a>
                    <a href="{{ path('merchandise_edit', {'id': merchandise.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('merchandise_new') }}">Create new</a>
{% endblock %}
