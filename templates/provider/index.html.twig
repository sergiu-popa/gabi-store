{% extends 'base.html.twig' %}

{% block title %}Provider index{% endblock %}

{% block body %}
    <h1>Provider index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Cui</th>
                <th>Town</th>
                <th>PhoneNumber</th>
                <th>Agent</th>
                <th>MobileNumber</th>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for provider in providers %}
            <tr>
                <td>{{ provider.cui }}</td>
                <td>{{ provider.town }}</td>
                <td>{{ provider.phoneNumber }}</td>
                <td>{{ provider.agent }}</td>
                <td>{{ provider.mobileNumber }}</td>
                <td>{{ provider.id }}</td>
                <td>{{ provider.name }}</td>
                <td>
                    <a href="{{ path('provider_show', {'id': provider.id}) }}">show</a>
                    <a href="{{ path('provider_edit', {'id': provider.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('provider_new') }}">Create new</a>
{% endblock %}
