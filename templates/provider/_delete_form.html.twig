<form class="d-inline-block w-25" method="post" action="{{ path('provider_delete', {'id': provider.id}) }}" onsubmit="return confirm('Ești sigur că vrei să ștergi acest furnizor?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ provider.id) }}">
    <button class="btn btn-outline-danger">{{ 'Delete'|trans }}</button>
</form>
