{% extends 'base.html.twig' %}

{% block title %}Iesiri{% endblock %}

{% block body %}
    <h1>Expense index</h1>

    Iesiri {% if is_granted('ROLE_ADMIN') %}/ <a href="{{ path('expense_category_index') }}">Categorii</a>{% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Amount</th>
                <th>Date</th>
                <th>Notes</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for expense in expenses %}
            <tr>
                <td>{{ expense.id }}</td>
                <td>{{ expense.amount }}</td>
                <td>{{ expense.date ? expense.date|date('Y-m-d') : '' }}</td>
                <td>{{ expense.notes }}</td>
                <td>
                    <a href="{{ path('expense_show', {'id': expense.id}) }}">show</a>
                    <a href="{{ path('expense_edit', {'id': expense.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('expense_new') }}">Create new</a>
{% endblock %}
