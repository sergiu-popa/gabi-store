{% extends 'base.html.twig' %}

{% block title %}Istoric{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h1>Istoric {{ date|date('d-m-Y') }}</h1>

        Filtru: alege alta data

        <table class="table">
            <thead>
            <tr>
                <th>Actiune</th>
                <th>Detalii</th>
                <th>Ora</th>
            </tr>
            </thead>
            <tbody>
            {% for s in snapshots %}
                <tr>
                    <td>{{ s.author.name }} a <strong>{{ s.type|snapshot_verb }}</strong> <em>{{ s.class|snapshot_type }}</em></td>
                    <td>{{ s.createdAt|date('H:i:s') }}</td>
                    <td>{{ s.type != 'delete' ? s.content|snapshot_content }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
