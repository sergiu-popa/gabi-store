<tr>
    {% set path = debt.id ?
        path('debt_edit', {'id': debt.id }) :
        path('debt_new', {'date': currentDate })
    %}
    {% set mode = debt.id ? 'edit' : 'insert' %}
    <td class="p-0" colspan="3">
        {{ form_start(form) }}
        <table class="table-form">
            <tr>
                <td>{{ form_row(form.name) }}</td>
                <td style="width: 100px;">{{ form_row(form.amount) }}</td>
                <td style="width: 80px;" class="pt-2">
                    <button class="js-save btn btn-sm btn-success align-text-bottom" data-href="{{ path }}" data-mode="{{ mode }}">
                        <i class="fas fa-check"></i></button>

                    <button class="js-close btn btn-sm btn-outline-secondary align-text-bottom" data-mode="{{ mode }}">
                        <i class="fas fa-times"></i>
                    </button>
                </td>
            </tr>
        </table>

        {{ form_end(form) }}
    </td>
</tr>
