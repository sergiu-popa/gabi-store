<div class="js-unverified card mb-3">
    <div class="card-header">Datorii diverse</div>

    <table class="js-main table table-striped" style="border-top: none;">
        <thead>
        <tr>
            <th>Nume</th>
            <th>Suma</th>
            {% if canModify %}<th></th>{% endif %}
        </tr>
        </thead>
        <tbody>
        {% for d in debts %}
            {{ include('debt/_debt.html.twig') }}
        {% else %}
            <tr class="js-empty"><td colspan="3">Nu există nici o datorie.</td></tr>
        {% endfor %}

        {% if debts|length > 1 %}
            <tr class="total">
                <td colspan="2" class="text-right"><strong>Total</strong></td>
                <td colspan="2">{{ debts|total }}</td>
            </tr>
        {% endif %}
        </tbody>
    </table>

    <div class="card-footer text-right">
        {% if showReview %}
            <button class="js-review btn btn-sm btn-success">
                <i class="fas fa-check"></i> verificat</button>
        {% endif %}

        {% if canModify %}
            <a class="js-add btn btn-sm btn-outline-primary"
               href="{{ path('debt_new', { 'date': currentDate|date('Y-m-d') }) }}">adaugă</a>
        {% endif %}
    </div>
</div>
