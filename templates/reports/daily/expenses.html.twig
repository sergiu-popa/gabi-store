{% extends 'base.html.twig' %}

{% block title %}Raport iesiri{% endblock %}

{% block body %}
    <h1>Raport iesiri</h1>

    <div class="card my-3">
        <table class="table table-striped">
            <thead class="card-header card-header-table">
            <tr>
                <th scope="col">Zi</th>
                {% for c in categories %}
                    <th scope="col">{{ c.name }}</th>
                {% endfor %}
            </tr>
            </thead>
            <tbody>
            {% for index, day in month.days %}
                <tr>
                    <th scope="row">{{ index }}</th>
                    {% for c in categories %}
                        <td>{{ day.categories[c.id] is defined ? day.categories[c.id]|num_for : 'â€“' }}</td>
                    {% endfor %}
                </tr>
            {% endfor %}
            </tbody>
            <tfoot>
            <tr>
                <td></td>
                {% for c in categories %}
                    <td>{{ month.days|total_category(c.id)|num_for|dash }}</td>
                {% endfor %}
            </tr>
            </tfoot>
        </table>
    </div>
{% endblock %}
