{% extends 'base.html.twig' %}

{% block title %}Raport anual{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 1200px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper table { width: 100% }
        .example-wrapper table td { border: 1px solid #eaeaea; padding: 3px; }
    </style>

    <div class="example-wrapper">
        <h1>Raport anual</h1>

        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th scope="col">Zi</th>
                <th scope="col">Vanzare zi</th>
                <th scope="col">Monetar</th>
                <th scope="col">Iesiri diverse</th>
                <th scope="col">Marfa facturi</th>
                <th scope="col">Marfa bonuri</th>
                <th scope="col">Profit Brut</th>
            </tr>
            </thead>
            <tbody>
            {% for year, data in data %}
                <tr>
                    <th scope="row">{{ year }}</th>
                    <td>{{ data.sales|number_format(2, '.', ' ')|dash }}</td>
                    <td>{{ data.money|number_format(2, '.', ' ')|dash }}</td>
                    <td>{{ data.expenses|number_format(2, '.', ' ')|dash }}</td>
                    <td>{{ data.payments_invoice|number_format(2, '.', ' ')|dash }}</td>
                    <td>{{ data.payments_bill|number_format(2, '.', ' ')|dash }}</td>
                    <td>{{ data.profit|number_format(2, '.', ' ')|dash }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
