<script src="{{ asset('js/sweetalert.min.js') }}"></script>

{% for type, messages in app.flashes %}
    {% for message in messages %}
        <script>
            Swal.fire({
                    title: '{{ type|trans|capitalize }}',
                    text: '{{ message }}',
                    timer: {{ type == 'error' ? 5000 : 3000 }},
                    icon: '{{ type }}',
                    buttons: false
                });
        </script>
    {% endfor %}
{% endfor %}
